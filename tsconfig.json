{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "lib": ["es2017", "dom"],
    "types": [/*"jest",*/ "webpack-env"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"]
}
